<view>
<cu-custom bgColor="bg-gradual-blue" ><view slot="content">工作台</view></cu-custom>
  <view class="scrollPage">

    <view class="cu-card article no-card margin-top cardpost bgwhite">
      <view class="cu-bar bgwhite border-botom ">
        <view class="action">
          <text class="cuIcon-titles text-blue" style="color:#0081ff"></text>
          <text class="text-xl text-bold">今日报告记录</text>
        </view>

      </view>
      <view class="cu-bar bgwhite border-botom ">
        <view class="action flex flex-direction">
          <text class="text-xl text-bold">扇形图</text>
          <!-- <view>
            <image src="../../images/arc.png"></image>
          </view> -->
          <view>
          待审核报告:{{reportList.checkNum}}份
          </view>
          <view>
          待审批报告:{{reportList.proveNum}}份
          </view>
        </view>

      </view>

    </view>


    <!-- tab栏 -->
    <view class="cu-bar bg-white solid-bottom margin-top">
      <view class="action">
        <text class="cuIcon-titles text-blue " style="color:#0081ff"></text>
        <text class="text-xl text-bold">任务处理</text>
      </view>
    </view>
    <scroll-view scroll-x class="bg-white nav" scroll-with-animation scroll-left="{{scrollLeft}}">
      <view class="cu-item {{index==TabCur?'text-blue cur':''}}" wx:for="{{tabList}}" wx:key="id" bindtap="tabSelect" data-id="{{index}}">
        {{item}}
      </view>
    </scroll-view>
    <!-- 待审核列表 -->
    <view wx:if="{{TabCur==0}}">
      <view class="cu-list menu-avatar">
        <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{4}}" wx:key="id" bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
          <view class="content">
            <view class="text-grey">文晓港</view>
            <view class="text-gray text-sm">
              <text class="cuIcon-infofill text-red"></text> 消息未送达</view>
          </view>
          <view class="action">
            <view class="text-grey text-xs">22:20</view>
            <view class="cu-tag round bg-grey sm">5</view>
          </view>
          <view class="move">
            <view class="bg-grey">置顶</view>
            <view class="bg-red">删除</view>
          </view>
        </view>
      </view>
    </view>

    <!-- 待审批列表 -->
    <view wx:else>
      <view class="cu-list menu-avatar">
        <view class="cu-item {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{4}}" wx:key="id" bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
          <view class="content">
            <view class="text-grey">编号</view>
            <view class="text-gray text-sm">
              <text class="cuIcon-infofill text-red"></text> 消息未送达</view>
          </view>
          <view class="action">
            <view class="text-grey text-xs">22:20</view>
            <view class="cu-tag round bg-grey sm">5</view>
          </view>
          <view class="move">
            <view class="bg-grey">置顶</view>
            <view class="bg-red">删除</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>