<!--pages/report/report.wxml-->

<cu-custom bgColor="bg-gradual-blue">
  <view slot="content">报告管理</view>
</cu-custom>


<view class="report">
  <view class="scrollPage">
    <!-- 今日报告记录区域  -->
    <view class="cu-card article no-card margin-top cardpost bgwhite">
      <!-- 标题 -->
      <view class="cu-bar bgwhite border-botom ">
        <view class="action">
          <text class="cuIcon-titles text-blue" style="color:#0081ff"></text>
          <text class="text-xl text-bold">今日报告记录</text>
        </view>
      </view>
      <!-- 内容区 -->
      <view class="cu-bar bgwhite border-botom padding-bottom">
        <view class="action flex flex-direction justify-center" style="width:100%;height:100%">
          <view class="" style="width:300rpx;height:300rpx">
            <image src="../../images/arc.png" mode style="width:100%;height:100%"></image>
          </view>
          <view class="total-wrap margin-top">
            <view class="text-lg">
               今日新建报告数:
              <text class="text-lg margin-left text-bold" style="font-style:italic"> 0份</text>
            </view>
            <view class="text-lg">
              今日审核报告数:
              <text class="text-lg margin-left text-bold" style="font-style:italic"> 0份</text>
            </view>
            <view class="text-lg">今日审批报告数:
              <text class="text-lg margin-left text-bold" style="font-style:italic"> 0份</text>
            </view>
            <view class="text-lg">今日归档报告数:
              <text class="text-lg margin-left text-bold" style="font-style:italic"> 0份</text>
            </view>
          </view>
        </view>

      </view>

    </view>
    <view class="cu-bar bg-white margin-top solid-bottom">
      <view class="action text-bold text-black">
        <text class="cuIcon-title text-blue text-bold"></text>我的报告列表
      </view>
    </view>
    <view class="padding bg-white">
      <view class="flex" style="height:15vh">
        <view class="flex-sub  padding-sm margin-xs radius" wx:for="{{reportList}}" wx:key="id" bindtap="reportInfo" data-id="{{item.id}}">
          <view class="flex flex-direction align-center justify-cebter" style="width;100%;height:100%">
            <image src="{{item.imgUrl}}" style="width:50%;height:50%"></image> {{item.name
            }}
          </view>
        </view>
        
      </view>
      <view class="flex">
        
      </view>
    </view>
  </view>

</view>